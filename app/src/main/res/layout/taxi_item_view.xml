<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/borders"
    android:padding="@dimen/item_layout_padding"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/icon_edge_size"
        android:layout_height="@dimen/icon_edge_size"
        android:layout_marginEnd="@dimen/item_elements_margins"
        android:layout_marginStart="@dimen/item_elements_margins"
        android:layout_marginLeft="@dimen/item_elements_margins"
        android:layout_marginRight="@dimen/item_elements_margins"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tv_cab_station"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|start"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="@dimen/item_text_size" />

    <TextView
        android:id="@+id/tv_eta"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/item_elements_margins"
        android:layout_marginStart="@dimen/item_elements_margins"
        android:gravity="center|end"
        android:textColor="@android:color/black"
        android:textSize="@dimen/item_text_size" />
</LinearLayout>